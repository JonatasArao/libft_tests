{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test_debug",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_PRELOAD",
                    "value": "${workspaceFolder}/lib/mocks.so"
                },
                {
                    "name": "DYLD_INSERT_LIBRARIES",
                    "value": "${workspaceFolder}/lib/mocks.dylib"
                },
                {
                    "name": "PATH",
                    "value": "${workspaceFolder}/lib;${env:PATH}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
			"preLaunchTask": "build"
        },
    ]
}
